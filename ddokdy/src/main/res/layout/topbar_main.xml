<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.jnm.android.widget.ScalableLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    sl:scale_base_width="1080"
		    sl:scale_base_height="176">
		<ImageView 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:src="@drawable/topbar_background"
			android:contentDescription="@null"
			android:scaleType="fitXY"
	       sl:scale_left="0"
	       sl:scale_top="0"
	       sl:scale_width="1080"
	       sl:scale_height="160"/>
		<ImageButton 
	      android:id="@+id/title_btn_left"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:src="@drawable/btn_search"
	      android:contentDescription="@null"
	      android:background="@null"
	      sl:scale_left="0"
	      sl:scale_top="0"
	      sl:scale_width="160"
	      sl:scale_height="160"/>
	    
	    <ImageButton android:id="@+id/title_btn_right"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:background="@null"
	      android:src="@drawable/btn_mypage"
	      android:contentDescription="@null"
	      sl:scale_left="920"
	      sl:scale_top="0"
	      sl:scale_width="160"
	      sl:scale_height="160"
	        />
	    <ImageView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/topbar_diagonal_line"
	        android:contentDescription="@null"
	        android:scaleType="fitXY"
			sl:scale_left="0"
			sl:scale_top="160"
			sl:scale_width="1080"
			sl:scale_height="16"/>
	 </com.jnm.android.widget.ScalableLayout>
	<TextView
        android:id="@+id/title_centerText" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:textColor="@color/blackgray"
        android:textSize="@dimen/textsize_title"
        android:text="@string/app_name"
        />
</FrameLayout>
