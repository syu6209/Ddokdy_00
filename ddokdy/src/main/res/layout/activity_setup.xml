                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="41.52dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24.67dp"
                        android:text="@string/text_member_leave"
                        android:textColor="@color/blackgray"
                        android:textSize="@dimen/textsize_subtitle" />

                    <RelativeLayout
                        android:layout_width="61.33dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:layout_width="11.33dp"
                            android:layout_height="19dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/right_arrow_btn" />


                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_margin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:background="@drawable/shape_round"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="41.52dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24.67dp"
                        android:text="@string/text_version_info"
                        android:textColor="@color/blackgray"
                        android:textSize="@dimen/textsize_subtitle" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blackgray"></LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="41.52dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24.67dp"
                        android:text="@string/text_version"
                        android:textColor="@color/blackgray"
                        android:textSize="@dimen/textsize_subtitle" />

                    <TextView
                        android:id="@+id/version_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="22dp"
                        android:text="1111111" />
                </RelativeLayout>

