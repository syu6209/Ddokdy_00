                    android:layout_width="match_parent"
                    android:layout_height="41.52dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="24.67dp"
                        android:text="@string/text_positional_information"
                        android:textColor="@color/blackgray"
                        android:textSize="@dimen/textsize_subtitle" />

                    <!--<CheckBox-->
                    <!--android:layout_width="10dp"-->
                    <!--android:layout_height="10dp"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginRight="22dp"-->
                    <!--android:background="@drawable/check_symbol_true"-->

                    <!--android:checked="false" />-->

                    <RelativeLayout
                        android:id="@+id/Check_Box_Position_Info_Btn"
                        android:layout_width="60.67dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:id="@+id/Check_Box_Position_Info_Image"

                            android:layout_width="16.67dp"
                            android:layout_height="16.67dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/check_symbol_false" />

                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_margin" />

            <LinearLayout
