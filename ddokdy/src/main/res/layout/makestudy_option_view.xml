<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/option_edit_text"
            style="@style/CustomSmallText"
            android:layout_width="match_parent"
            android:layout_toEndOf="@id/tv_pivot3"
            android:background="@color/white"
            android:hint="@string/hint_input_member"
            android:padding="@dimen/px_90" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="14.33dp"
            android:layout_alignParentBottom="true"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:background="@color/blackgray">

            </LinearLayout>

        </LinearLayout>

        <ImageButton

            android:id="@+id/makestudy_plus_minus_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/btn_small_plus"
            android:contentDescription="@null"
            android:scaleType="fitXY" />

    </RelativeLayout>
</LinearLayout>
