<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:sl="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:orientation="vertical"
	android:background="@null">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
	    android:gravity="center"
	    android:orientation="vertical"
        android:background="@drawable/shape_round">
		    	<com.jnm.android.widget.ScalableLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    sl:scale_base_width="1000"
				    sl:scale_base_height="375">
				    <LinearLayout
				        android:id="@+id/dialog_getstring_line"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:background="#11ee11"
				        android:orientation="vertical"
				        sl:scale_left="0"
				        sl:scale_top="123"
				        sl:scale_width="1000"
				        sl:scale_height="3"></LinearLayout>
				    
				    <LinearLayout 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
						android:background="#11ee11"
				        sl:scale_left="0"
				        sl:scale_top="250"
				        sl:scale_width="1000"
				        sl:scale_height="1"></LinearLayout>
				    <LinearLayout 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
						android:background="#11ee11"
				        sl:scale_left="0"
				        sl:scale_top="375"
				        sl:scale_width="1000"
				        sl:scale_height="1"></LinearLayout>
				    
				    <TextView
				        android:id="@+id/dialog_gets_title"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/app_name"
						android:background="#11ee11"
				        android:textStyle="bold"
				        sl:scale_left="43"
				        sl:scale_top="48"
				        sl:scale_width="600"
				        sl:scale_height="40"
				        sl:scale_textsize="31"
				        />
				    <TextView
				        android:id="@+id/dialog_gets_label"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/app_name"
						android:background="#11ee11"
				        android:textStyle="bold"
				        sl:scale_left="43"
				        sl:scale_top="175"
				        sl:scale_width="200"
				        sl:scale_height="40"
				        sl:scale_textsize="31"
				        />
				    <EditText
				        android:id="@+id/dialog_gets_input"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:hint="@string/app_name"
				        android:inputType="textPersonName"
				        android:textColor="@color/blackgray"
				        android:background="@null"
				        android:padding="4dp"
				        sl:scale_left="368"
				        sl:scale_top="163"
				        sl:scale_width="400"
				        sl:scale_height="64"
				        sl:scale_textsize="31"
				        />
				    <EditText
				        android:id="@+id/dialog_gets_input_number"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:hint="@string/app_name"
				        android:inputType="numberDecimal"
				        android:textColor="@color/blackgray"
				        android:background="@null"
				        android:padding="4dp"
				        sl:scale_left="368"
				        sl:scale_top="163"
				        sl:scale_width="400"
				        sl:scale_height="64"
				        sl:scale_textsize="31"
				        />
				    
				    
				    
				<Button
				    android:id="@+id/dialog_gets_btn"
				    android:layout_width="220dp"
				    android:layout_height="45dp"
				    android:background="@drawable/shape_round_gray"
				    android:textColor="#ffffff"
				    android:text="@string/app_name"
			        sl:scale_left="0"
			        sl:scale_top="250"
			        sl:scale_width="1000"
			        sl:scale_height="125"
			        sl:scale_textsize="31"/>
				</com.jnm.android.widget.ScalableLayout>
		</LinearLayout>
</LinearLayout>